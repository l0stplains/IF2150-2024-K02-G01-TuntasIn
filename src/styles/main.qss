/* styles.qss */
QMainWindow {
    background-color: #f5f5f5;
}

QPushButton {
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 12px;
}

QPushButton:hover {
    background-color: #0056b3;
}

QLineEdit {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 5px;
    background: #fff;
}

QListWidget {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 5px;
    background: #f9f9f9;
}

