#appLabel {
    font-size: 32px;
   font-weight: bold;
   color: #7E57C2;
   padding: 12px 20px;
   border: none;
   background: transparent;
   font-family: 'Segoe UI', Arial;
   letter-spacing: 1px;
}

/* Fokus outline berwarna ungu untuk semua input */
QLineEdit:focus, QComboBox:focus {
    border: 2px solid purple;
    border-radius: 8px;
    background: #fff;
}

/* Gaya untuk tombol OK */
#okButton {
    background-color: purple;
    color: white;
    border: 2px solid purple;
    border-radius: 8px;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: bold;
}

/* Gaya hover untuk tombol OK */
#okButton:hover {
    background-color: #d1a3ff; /* Ungu pudar */
    border-color: #d1a3ff;
}

/* Gaya untuk tombol Cancel */
#cancelButton {
    background-color: red;
    color: white;
    border: 2px solid red;
    border-radius: 8px;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: bold;
}

/* Gaya hover untuk tombol Cancel */
#cancelButton:hover {
    background-color: #ff7f7f; /* Merah pudar */
    border-color: #ff7f7f;
}

/* Styling untuk label navigasi */
#homeLabel, #folderLabel, #calendarLabel, #progressLabel {
    background: transparent;
   border: none;
   padding: 12px 24px;
   margin: 0 4px;
   color: #5C6BC0; /* Warna biru */
   font-size: 16px;
   font-weight: 500;
   border-radius: 6px;
}

/* Efek hover untuk label navigasi */
#homeLabel:hover, #folderLabel:hover, #calendarLabel:hover, #progressLabel:hover {
    color: #FF8800;
    text-decoration: underline;
}

